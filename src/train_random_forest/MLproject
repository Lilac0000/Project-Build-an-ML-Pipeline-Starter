name: train_random_forest

conda_env: ../../conda.yaml

entry_points:
  main:
    parameters:
      trainval_artifact:
        description: Train/validation dataset artifact
        type: str

      rf_config:
        description: Path to JSON file with RandomForest configuration
        type: str

      output_artifact:
        description: Name for the output model artifact
        type: str

      random_seed:
        description: Random seed
        type: int
        default: 42

    command: >
      python run.py \
        --trainval_artifact ${trainval_artifact} \
        --rf_config ${rf_config} \
        --output_artifact ${output_artifact} \
        --random_seed ${random_seed}
